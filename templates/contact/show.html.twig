{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table" >
        <tbody>

            <tr>
                <th>Name</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ contact.lastName }}</td>
            </tr>
            <tr>
                <th>Phone_number</th>
                <td>{{ contact.phoneNumber }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_contact_index') }}" class="btn btn-info" role="button">back to list</a>

    <a href="{{ path('app_contact_edit', {'id': contact.id}) }}"  class="btn btn-info" role="button">edit</a>

    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}
